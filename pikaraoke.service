[Unit]
Description=Pikaraoke service
After=avahi-daemon.service
After=dbus.service
After=network-online.target
Wants=network-online.target
After=nss-lookup.target
After=pulseaudio.service
After=remote-fs.target
After=sound.target

[Service]
Type=simple
User=pi
#StandardInput=tty
Environment="DISPLAY=:0"
StandardOutput=tty
ExecStart=/usr/bin/python3 /home/pi/pikaraoke/app.py --download-path /home/pi/pikaraoke_songs  --log-level 0 --hide-splash-screen

[Install]
WantedBy=multi-user.target

